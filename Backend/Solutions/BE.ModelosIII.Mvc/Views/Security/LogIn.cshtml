@model BE.ModelosIII.Tasks.Commands.Security.LoginCommand
@{
    ViewBag.Title = "Login - ModelosIII Backend";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="utopia-login-message">
                <h1>
                    Bienvenido al backend de ModelosIII!</h1>
                <p>
                    Ingrese para acceder</p>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid" >
                <div class="span6 utopia-login-info"></div>
                <div class="span6">
                    <div class="utopia-login">
                        <h1>
                            Acceso ModelosIII</h1>
                        @using (Html.BeginForm("LogIn", "Security", new { returnUrl = Request.QueryString["returnUrl"] }, FormMethod.Post, new { @class = "utopia" }))
                        {
                            <div class="control-group">
                                <label class="control-label" for="Email">Usuario:</label>
                                <div class="controls">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "span12"})
                                    @Html.ValidationMessageFor(m => m.Email, null,  new { @class="help-inline"})
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="Password">Contraseña:</label>
                                <div class="controls">
                                    @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "span12" })
                                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-inline" })
                                </div>
                            </div>
                            <ul class="utopia-login-action">
                                <li>
                                    <input type="submit" class="btn span4" value="Ingresar" />
                                <div class="pull-right">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe, "Recordarme!")
                                    </div>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript" src="/Content/js/utopia.js"></script>
}
